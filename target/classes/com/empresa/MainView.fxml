<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.empresa.controller.FuncionarioController"
      styleClass="root" stylesheets="@/css/styles.css"
      spacing="20" alignment="TOP_CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Gerenciador de Funcionários" styleClass="header-title"/>

    <HBox spacing="40" alignment="TOP_CENTER">
        <VBox spacing="15" alignment="TOP_LEFT">
            <Label text="Dados Pessoais" styleClass="section-title"/>
            <GridPane hgap="10" vgap="10">
                <Label text="Matrícula:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="matriculaField" promptText="Ex: 999999" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Nome Completo:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="nomeField" promptText="Nome do funcionário" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="250"/>

                <Label text="CPF:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="cpfField" promptText="000.000.000-00" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Data de Nascimento:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dataNascimentoPicker" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="250"/>

                <Label text="Cargo:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="cargoField" promptText="Ex: Desenvolvedor" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Salário:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="salarioField" promptText="Ex: 5000.00" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                <Label text="Data de Contratação:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dataContratacaoPicker" GridPane.rowIndex="6" GridPane.columnIndex="1" prefWidth="250"/>
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>
            </GridPane>
        </VBox>

        <VBox spacing="15" alignment="TOP_LEFT">
            <Label text="Endereço" styleClass="section-title"/>
            <GridPane hgap="10" vgap="10">
                <Label text="Logradouro:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="logradouroField" promptText="Nome da rua/avenida" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="250"/>

                <Label text="Número:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="numeroField" promptText="Ex: 123" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Complemento:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="complementoField" promptText="Apto, bloco, etc." GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Bairro:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="bairroField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Cidade:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="cidadeField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Estado:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="estadoField" promptText="Ex: GO" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                <Label text="CEP:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <TextField fx:id="cepField" promptText="00000-000" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>
            </GridPane>
        </VBox>
    </HBox>

    <Button text="Cadastrar Funcionário" onAction="#handleCadastrar" styleClass="button-primary" maxWidth="Infinity"/>

    <Separator/>

    <VBox spacing="10">
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 0 0 10 0;">
            <Label text="Consultar por Matrícula:"/>
            <TextField fx:id="consultaMatriculaField" HBox.hgrow="ALWAYS"/>
            <Button text="Consultar" onAction="#handleConsultar" styleClass="button-secondary"/>
        </HBox>
        <TableView fx:id="funcionarioTable" prefHeight="200">
            <columns>
                <TableColumn fx:id="matriculaColumn" text="Matrícula" prefWidth="100"/>
                <TableColumn fx:id="nomeColumn" text="Nome" prefWidth="400"/>
                <TableColumn fx:id="cargoColumn" text="Cargo" prefWidth="250"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
            <Button text="Excluir Selecionado" onAction="#handleExcluir" styleClass="button-danger"/>
        </HBox>
    </VBox>
</VBox>